      <h2>
        <%= pluralize(topic.errors.count, "error") %> prohibited
        this topic from being saved:
      </h2>
      <ul>
        <% topic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for topic, url: url, method: meth  do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description, size: "20x6" %>
	<br>
	<%= f.label "Published at" %>
	<%= f.date_field :published_at %>
	<br>
	<%#= f.label "User Id"%>
	<%=f.hidden_field :user_id, value: current_user.id %>
	<%#= text_field_tag :another %>
	<%= f.submit "Save"%>
	<%= link_to "Cancel", topics_url %>
<% end %>
