<!-- edit: ngambil dari database -->
<%= form_for staff, url: url, method: meth  do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :username %>
  <%= f.text_field :username%>
  <br>
  <%= f.label :password  %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :role %>
  <%= f.collection_select(:role_id, Role.all, :id,:name)%>
  <br>
  <%=f.hidden_field :staff_id, value: current_staff.id %>
  <%= f.submit "Save"%>
  <%= link_to "Cancel", roles_path%>
<% end %>